{% extends '::base.html.twig' %}
{% block _body %}  <h2>Usuarios</h2> {% endblock %}
{% block body %}
    
    <h2>Ver</h2>
    <br>

   <table class="table">
        <tbody>
   
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            
            <tr>
                <th>Nombres</th>
                <td>{{ entity.datos.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ entity.datos.apellidos }}</td>
            </tr>
            <tr>
                <th>Cedula</th>
                <td>{{ entity.datos.cedula }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ entity.username | title }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email | title }}</td>
            </tr>
            
            <tr>
                <th>Estado</th>
                 {% if entity.isActive %}
                    <td>Activo</td>
                 {% else%}
                       <td>Inactivo</td>
                 {% endif %}
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('usuarios') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
