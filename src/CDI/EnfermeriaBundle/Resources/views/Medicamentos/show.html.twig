{% extends '::base.html.twig' %}
{% block _body %}  <h2>Medicamentos</h2> {% endblock %}
{% block body %}
    
    <h2>Ver</h2>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Principio Activo</th>
                <td>{{ entity.principioActivo | title }}</td>
            </tr>
            
            <tr>
                <th>Tipo de Medicamento</th>
                <td>{{ entity.tipoMedicamento | title }}</td>
            </tr>
            
            <tr>
                <th>Stock</th>
                <td>{{ entity.stock }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ entity.disponible }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('medicamentos') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('medicamentos_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
